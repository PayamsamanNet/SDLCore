<script>

    function ChangeType(){
        var type = $("#Customertype").val();
        if (type == "1") {
            $(".kharegi").show();
            $(".Haghigi").hide();
        }
        if (type == "2") {
            $(".kharegi").hide();
            $(".Haghigi").show();
        }
    }

</script>