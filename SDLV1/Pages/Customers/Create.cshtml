<script>

    $(document).ready(function(){
        ChangeType();
    })
    function ChangeType() {
        


        var type = $("#Customertype").val();
        if (type == "RealCustomer") {
            $(".RealCustomer").show();
            $(".ForeignNatioan").hide();
            $(".LegalCustomer").hide();
        }
        if (type == "LegalCustomer") {
            $(".LegalCustomer").show();
            $(".ForeignNatioan").hide();
            $(".RealCustomer").hide();
        }
        if (type == "ForeignNatioan") {
            $(".ForeignNatioan").show();
            $(".LegalCustomer").hide();
            $(".RealCustomer").hide();
        }
    }

</script>