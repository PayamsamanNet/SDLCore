@page
@model SDLV1.Pages.Degree.EditModel
@{
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>افزودن درجه</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-left">
                    <li class="breadcrumb-item active"> صندوق امانات بانک ملت  </li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">

                    <form method="post" asp-page="Create">
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="DegreeDto.Name"></label>
                                <input asp-for="DegreeDto.Name" class="form-control" />
                                <span class="text-danger" asp-validation-for="DegreeDto.Name"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DegreeDto.MonthlyPriceRatio"></label>
                                <input asp-for="DegreeDto.MonthlyPriceRatio" class="form-control" />
                                <span class="text-danger" asp-validation-for="DegreeDto.MonthlyPriceRatio "></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DegreeDto.TrustPriceRatio"></label>
                                <input asp-for="DegreeDto.TrustPriceRatio" class="form-control" />
                                <span class="text-danger" asp-validation-for="DegreeDto.TrustPriceRatio  "></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DegreeDto.IsUsed "></label>
                                <select class="form-control" asp-for="DegreeDto.IsUsed">
                                    <option value="True">بله </option>
                                    <option value="false">خیر </option>
                                </select>
                                <span class="text-danger" asp-validation-for="DegreeDto.IsUsed"></span>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">ثبت اطلاعات </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>