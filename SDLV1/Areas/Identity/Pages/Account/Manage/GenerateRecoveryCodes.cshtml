@page
@using Microsoft.Extensions.Options;
@using SDLV1.Resources;
@using System.Globalization;
@model GenerateRecoveryCodesModel

@inject LocalizationService localizationService

@inject IOptions<RequestLocalizationOptions> ioOptions

@{
    ViewData["Title"] = @localizationService.GetLocalizedHtmlString("Generate two-factor authentication (2FA) recovery codes");
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
    var isRTL = CultureInfo.CurrentCulture.Name.StartsWith("fa");
}



<partial name="_StatusMessage" for="StatusMessage" />
<h3>@ViewData["Title"]</h3>
<div class="alert alert-warning" role="alert" dir="@(isRTL ? "RTL" : "LTR")">
    <p>
        <span class="glyphicon glyphicon-warning-sign"></span>
        <strong>@localizationService.GetLocalizedHtmlString("Put these codes in a safe place.")</strong>
    </p>
    <p>
        @localizationService.GetLocalizedHtmlString(" If you lose your device and don't have the recovery codes you will lose access to your account.")
       
    </p>
    <p>
        @localizationService.GetLocalizedHtmlString("Generating new recovery codes does not change the keys used in authenticator apps. If you wish to change the key"+
        "used in an authenticator app you should")
         <a asp-page="./ResetAuthenticator">@localizationService.GetLocalizedHtmlString("reset your authenticator keys.")</a>
    </p>
</div>
<div>
    <form method="post">
        <button class="btn btn-danger" type="submit">@localizationService.GetLocalizedHtmlString("Generate Recovery Codes")</button>
    </form>
</div>
