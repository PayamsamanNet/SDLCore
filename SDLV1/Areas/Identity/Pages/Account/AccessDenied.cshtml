@page
@model AccessDeniedModel

@inject LocalizationService localizationService

@inject IOptions<RequestLocalizationOptions> ioOptions

@{
    ViewData["Title"] = @localizationService.GetLocalizedHtmlString("Access denied");
    var isRTL = CultureInfo.CurrentCulture.Name.StartsWith("fa");
}

@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options;
@using SDLV1.Resources;

@inject IViewLocalizer localizer



<header>
    <div>
        class="container-md justify-content-md-between col-md-4" dir="@(isRTL ? "RTL" : "LTR")"

        <div class="row">
            <div class="p-4" style="border:4px solid red">
                <h1 class="text-danger">@ViewData["Title"]</h1>
                <p class="text-danger">@localizationService.GetLocalizedHtmlString("You do not have access to this resource")</p>
            </div>
        </div>
    </div>
</header>

