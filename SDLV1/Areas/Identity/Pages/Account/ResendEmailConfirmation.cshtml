@page
@using Microsoft.Extensions.Options;
@using SDLV1.Resources;
@using System.Globalization;
@model ResendEmailConfirmationModel

@inject LocalizationService localizationService

@inject IOptions<RequestLocalizationOptions> ioOptions

@{
    ViewData["Title"] = @localizationService.GetLocalizedHtmlString("Resend email confirmation");
    var isRTL = CultureInfo.CurrentCulture.Name.StartsWith("fa");
}

<h1>@ViewData["Title"]</h1>
<h2>@localizationService.GetLocalizedHtmlString("Enter your email.")</h2>
<hr />
<div class="row" dir="@(isRTL ? "RTL" : "LTR")">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" aria-required="true" />
                <label asp-for="Input.Email" class="form-label">@localizationService.GetLocalizedHtmlString("Email")</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">@localizationService.GetLocalizedHtmlString("Resend")</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
