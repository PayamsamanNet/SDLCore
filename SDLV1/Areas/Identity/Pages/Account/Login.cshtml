@page
@model LoginModel


@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options;
@using SDLV1.Resources;
@inject LocalizationService localizationService

@inject IOptions<RequestLocalizationOptions> ioOptions

@{
    ViewData["Title"] = @localizationService.GetLocalizedHtmlString("log in");
    var isRTL = CultureInfo.CurrentCulture.Name.StartsWith("fa");
}


<div class="container-md justify-content-md-between col-md-4" dir="@(isRTL ? "RTL" : "LTR")">
    
    
        <h1>@ViewData["Title"]</h1>
        <div class="row">
            <div class="p-4" style="border:4px solid red">
                <section>
                    <form id="account" method="post">
                        <h2>@localizationService.GetLocalizedHtmlString("Use a local account to log in.")</h2>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                            <label asp-for="Input.Email" class="form-label">@localizationService.GetLocalizedHtmlString("Email")</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                            <label asp-for="Input.Password" class="form-label">@localizationService.GetLocalizedHtmlString("Password")</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div>
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe" class="form-label">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />

                                    @localizationService.GetLocalizedHtmlString("Remember Me")
                                </label>
                            </div>
                        </div>
                        <div>
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">@localizationService.GetLocalizedHtmlString("log in")</button>
                        </div>
                        <div>
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword">@localizationService.GetLocalizedHtmlString("Forgot your password?")</a>
                            </p>
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">@localizationService.GetLocalizedHtmlString("Register as a new user")</a>
                            </p>
                            <p>
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">@localizationService.GetLocalizedHtmlString("Resend email confirmation")</a>
                            </p>
                        </div>
                    </form>
                </section>
            </div>

        </div>
 
   

</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
