@page
@model RegisterModel

@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options;
@using SDLV1.Resources;

@inject LocalizationService localizationService

@inject IOptions<RequestLocalizationOptions> ioOptions

@{
    ViewData["Title"] = @localizationService.GetLocalizedHtmlString("register");
    var isRTL = CultureInfo.CurrentCulture.Name.StartsWith("fa");
}



<div class="container-md justify-content-md-between col-md-4" dir="@(isRTL ? "RTL" : "LTR")">


    <h1>@ViewData["Title"]</h1>

    <div class="row">
        <div class="p-4" style="border:4px solid red">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2>@localizationService.GetLocalizedHtmlString("Create a new account")</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email">@localizationService.GetLocalizedHtmlString("Email")</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.Password">@localizationService.GetLocalizedHtmlString("Password")</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.ConfirmPassword">@localizationService.GetLocalizedHtmlString("ConfirmPassword")</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">@localizationService.GetLocalizedHtmlString("register")</button>
            </form>
        </div>

    </div>


</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
