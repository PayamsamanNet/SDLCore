@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options;
@using SDLV1.Resources;

@inject LocalizationService localizationService

@inject IOptions<RequestLocalizationOptions> ioOptions

@{
    ViewData["Title"] = @localizationService.GetLocalizedHtmlString("Home Page");
    var isRTL = CultureInfo.CurrentCulture.Name.StartsWith("fa");
}


<!DOCTYPE html>
<html lang="en" dir="@(isRTL ? "RTL" : "LTR")">
    <head>

    </head>
    <body>
        <div class="text-center">
        <h1 class="display-4">@ViewBag.WelcomeMessage</h1>
            <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
        </div>
    </body>

</html>